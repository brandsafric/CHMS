<!doctype html>
<html lang="en">
 
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
        <%include ../partials/bootstrap%>
        <link rel="stylesheet" href="/css/toastr.min.css">
        <link rel="stylesheet" href="/editor/summernote.css">
    <title>Edit Event</title>
</head>

<body>
    
    <div class="dashboard-main-wrapper">
        <%include ../partials/navbar%>
        <%include ../partials/sidebar%>
       
            
                <div class="container  dashboard-content ">                    
                        <div class="row justify-content-center">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-4 mt-2">
                                        <div style="padding-left:12em">
                                            <h2 class="pageheader-title">Church Management System Dashboard </h2>
                                            <div class="page-breadcrumb">
                                                <nav aria-label="breadcrumb">
                                                    <ol class="breadcrumb">
                                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                                        <li class="breadcrumb-item" aria-current="page">Events</li>
                                                        <li class="breadcrumb-item active" aria-current="page">Edit Event</li>
                                                    </ol>
                                                </nav>
                                            </div>
                                        </div>
                                    </div>
                                <div class="col-xl-8 offset-xl-2 col-lg-8 offset-lg-2 col-md-12 col-sm-12 col-12  ">
                                        <div class="card">
                                                <h5 class="card-header"><i class="fas fa-edit">&emsp;</i>Edit Event </h5>
                                                <div class="card-body">
                                                        <form method="POST"  action="/admin/events/edit/<%=event.id%>" enctype="multipart/form-data">
                                                            <div class="form-group">
                                                                <input class="form-control form-control-lg" required=true name="name" type="text" placeholder="Event's Name" required value="<%=event.name%>">
                                                            </div>
                                                            <div class="form-group">
                                                                    <input class="form-control form-control-lg" required=true name="venue" type="text" value="<%=event.venue%>" required placeholder="Event's Venue">
                                                            </div>

                                                                <div class="form-group">
                                                                        <label>Description <small class="text-muted"> &nbsp; Event Description</small>
                                                                        </label>
                                                                        <textarea name="description" id="textEdit" placeholder="Event's Descriptions Goes Here" cols="30" rows="5" class="form-control" required><%=event.description%></textarea>
                                                                    </div>
                                                            <button type="submit" class="btn btn-primary btn-lg btn-block">Update Event</button>
                                                        </form>
                                                </div>
                                          </div>
                                </div>
                            </div>
                        </div>
                        <%include ../partials/footer%>
                    </div>
    <!-- Optional JavaScript -->
    <%include ../partials/javascript%>
    <script src="/js/toastr.min.js"></script>
    <script src="/editor/summernote.js"></script>
    <script>
        $(()=>{
            $('#textEdit').summernote();
        })
    </script>
    
</body>
 
</html>