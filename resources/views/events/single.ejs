<!doctype html>
<html lang="en">
 
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
        <%include ../partials/bootstrap%>
        <link rel="stylesheet" href="/css/toastr.min.css">
    <title>View Event</title>
</head>

<body>
    
    <div class="dashboard-main-wrapper">
        <%include ../partials/navbar%>
        <%include ../partials/sidebar%>
       
        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">
                    <!-- ============================================================== -->
                    <!-- pageheader  -->
                    <!-- ============================================================== -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h2 class="pageheader-title">Church Management System Dashboard </h2>
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                            <li class="breadcrumb-item">Events</li>
                                            <li class="breadcrumb-item active" aria-current="page">View Event</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end pageheader  -->
                    <!-- ============================================================== -->

                    <div class="row">
                            <div class="col-xl-8 offset-xl-2 col-lg-8 cc col-md-6 col-sm-12 col-12">
                                    <div class="card">
                                        <h1 class="text-center mt-3 display-4"><i class="fas fa-calendar"></i></h1>
                                        <p class="text-center"><%= event.name%></p>
                                        <hr>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"> <h3 class="">Name</h3><%=event.name%></li>
                                            <li class="list-group-item"><h3 class="">Venue</h3><%=event.venue%></li>
                                            <li class="list-group-item"><h3 class="">Description</h3><%-event.description%></li>
                                        </ul>
                                        <div class="card-footer">
                                            <button class="btn btn-primary" onclick="window.history.back()"> <i class=" fas fa-arrow-alt-circle-left">&nbsp;</i> Back</button>
                                            <button class="btn btn-info float-right" onclick="window.print()"> <i class=" fas fa-print">&nbsp;</i> Print</button>
                                        </div>
                                    </div>
                                </div>
                    </div>
                 
                       
                </div>
             </div>
            </div>  
            <%include ../partials/footer%>
        </div>
    <!-- Optional JavaScript -->
    <%include ../partials/javascript%>
    <script src="/js/toastr.min.js"></script>
    <script>
    
    </script>
</body>
 
</html>