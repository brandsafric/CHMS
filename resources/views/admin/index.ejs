<!doctype html>
<html lang="en">
 
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
        <%include ../partials/bootstrap%>
    <title>Church Management System</title>
</head>

<body>
    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->
    <div class="dashboard-main-wrapper">
        <!-- ============================================================== -->
        <!-- navbar -->
        <!-- ============================================================== -->
        <%include ../partials/navbar%>
        <!-- ============================================================== -->
        <!-- end navbar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- left sidebar -->
        <!-- ============================================================== -->
            <%include ../partials/sidebar%>
        <!-- ============================================================== -->
        <!-- end left sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- wrapper  -->
        <!-- ============================================================== -->
        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">
                    <!-- ============================================================== -->
                    <!-- pageheader  -->
                    <!-- ============================================================== -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h2 class="pageheader-title">Church Management System Dashboard </h2>
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Home</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end pageheader  -->
                    <!-- ============================================================== -->
                 
                        <div class="row">
                            <!-- ============================================================== -->
                      
                            <!-- ============================================================== -->

                                          <!-- recent members  -->
                            <!-- ============================================================== -->
                            <div class="col-xl-12 col-lg-12 col-md-6 col-sm-12 col-12">
                                <div class="card">
                                    <h5 class="card-header">New Members</h5>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead class="bg-light">
                                                    <tr class="border-0">
                                                        
                                                        <th class="border-0">Display Picture</th>
                                                        <th class="border-0">Name</th>
                                                        <th class="border-0">Gender</th>
                                                        <th class="border-0">Occupation</th>
                                                        <th class="border-0">Phone</th>
                                                        <th class="border-0">E-mail</th>
                                                        <th class="border-0">Date of Birth</th>
                                                        
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                        <% for (member of members) { %>
                                                    <tr>
                                                        
                                                        <td>
                                                            <div class="m-r-10"><img src="<%=member.pics%>" alt="user" class="rounded-circle" height="45" width="45"></div>
                                                        </td>
                                                        <td><%=member.last_name%></td>
                                                        <td><%=member.gender%> </td>
                                                        <td><%=member.occupation%></td>
                                                        <td><%=member.phone%></td>
                                                        <td><%=member.email%></td>
                                                        <td><%=member.dob%></td>
                                                       
                                                    </tr>
                                                    <%}%>
                                                    <tr>
                                                        <td colspan="9"><a href="/admin/members/index" class="btn btn-outline-light float-right">All Members</a></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <!-- end recent members  -->
                           
                        </div>
                        <div class="row">
                         
                            
                                   <!-- Recent Events  -->
                            <!-- ============================================================== -->
                            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0"><i class="fas fa-calendar"></i>&emsp; Recent Events</h5>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead class="bg-light">
                                                    <tr class="border-0">
                                                        <th class="border-0">Name</th>
                                                        <th class="border-0">Venue</th>
                                                        <th class="border-0">Description</th>
                                                       
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                        <% for (event of events) { %>
                                                    <tr>
                                                        <td><%=event.name%></td>
                                                        <td><%=event.venue%> </td>
                                                        <td><%-event.description.substr(0,50)+'...'%></td>
                                                        <!-- EDIT, VIEW AND DELETE -->                                                       
                                                    </tr>
                                                    <%}%>
                                                    <tr>
                                                        <td colspan="9"><a href="" class="btn btn-outline-light float-right">All Events</a></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <!-- end recent events -->
                            <!-- ============================================================== -->


                            <!-- Recent sermons -->
                            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0"> <i class="fas fa-microphone"></i> &emsp; Recent Sermons</h5>
                                    </div>
                                    <div class="card-body p-0">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead class="bg-light">
                                                        <tr class="border-0">
                                                            <th class="border-0">Title</th>
                                                            <th class="border-0">Content</th>
                                                            <th class="border-0">Date</th>
                                                           
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                            <% for (sermon of sermons) { %>
                                                        <tr>
                                                            <td><%=sermon.title%></td>
                                                            <td><%-sermon.contents.substr(0,50)+'...'%> </td>
                                                            <td><%=sermon.created_at%></td>
                                                            <!-- EDIT, VIEW AND DELETE -->                                                       
                                                        </tr>
                                                        <%}%>
                                                        <tr>
                                                            <td colspan="9"><a href="" class="btn btn-outline-light float-right">All Sermons</a></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                </div>
                            </div>
                            <!-- end requests -->
                        
                        </div>

                        <div class="row">
                            <!-- ============================================================== -->
                                <!-- Totals members -->
                            <!-- ============================================================== -->
                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                                <div class="card border-3 border-top border-top-primary">
                                    <div class="card-body">
                                        <h5 class="text-muted">Members</h5>
                                        <div class="metric-value d-inline-block">
                                            <h1 class="mb-1"><%= count[0].total%></h1>
                                        </div>
                                        <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                            <span class="icon-circle-small icon-box-xs text-success bg-success-light"><i class="fa fa-users"></i></span><span class="ml-1"><%= count[0].total%> Members</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <!-- end total members  -->
                            <!-- ============================================================== -->
                            <!-- ============================================================== -->
                            <!-- total staff  -->
                            <!-- ============================================================== -->
                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                                <div class="card border-3 border-top border-top-primary">
                                    <div class="card-body">
                                        <h5 class="text-muted">Staff</h5>
                                        <div class="metric-value d-inline-block">
                                            <h1 class="mb-1">1245</h1>
                                        </div>
                                        <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                            <span class="icon-circle-small icon-box-xs text-success bg-success-light"><i class="fa fa-fw fa-arrow-up"></i></span><span class="ml-1">10%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <!-- end total staff  -->
                            <!-- ============================================================== -->
                            <!-- ============================================================== -->
                            <!-- Total Events  -->
                            <!-- ============================================================== -->
                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                                <div class="card border-3 border-top border-top-primary">
                                    <div class="card-body">
                                        <h5 class="text-muted">Events</h5>
                                        <div class="metric-value d-inline-block">
                                            <h1 class="mb-1"><%=eventCount[0].total%></h1>
                                        </div>
                                        <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                            <span class="icon-circle-small icon-box-xs text-success bg-success-light"><i class="fa fa-calendar"></i></span><span class="ml-1">Events</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <!-- end Events  -->
                            <!-- ============================================================== -->
                            <!-- ============================================================== -->
                            <!-- total Total Prayer requests  -->
                            <!-- ============================================================== -->
                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
                                <div class="card border-3 border-top border-top-primary">
                                    <div class="card-body">
                                        <h5 class="text-muted">Prayer Requests</h5>
                                        <div class="metric-value d-inline-block">
                                            <h1 class="mb-1">1340</h1>
                                        </div>
                                        <div class="metric-label d-inline-block float-right text-danger font-weight-bold">
                                            <span class="icon-circle-small icon-box-xs text-danger bg-danger-light bg-danger-light "><i class="fa fa-fw fa-arrow-down"></i></span><span class="ml-1">4%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <!-- end total prayer requests  -->
                            <!-- ============================================================== -->
                        </div>
                        <div class="row">                            
                            <!-- ============================================================== -->
                            <!-- ============================================================== -->
                            <!-- Sermons  -->
                            <!-- ============================================================== -->
                            <div class="col-xl-5 col-lg-5 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    <h5 class="card-header">Sermons</h5>
                                    <div class="card-body">
                                        <div id="c3chart_category" style="height: 420px;"></div>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <!-- end sermons -->
                            <!-- ============================================================== -->


                            <!-- Church Staff -->

                            <div class="col-xl-7 col-lg-7 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    <h5 class="card-header"> Staff</h5>
                                    <div class="card-body">
                                        <div id="morris_totalrevenue"></div>
                                    </div>
                                    <div class="card-footer">
                                        <p class="display-7 font-weight-bold"><span class="text-primary d-inline-block">$26,000</span><span class="text-success float-right">+9.45%</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- end staff -->
                        
            
        <!-- ============================================================== -->
        <!-- end wrapper  -->
        <!-- ============================================================== -->
       
          
            
        </div>
    </div>
    </div>  
        <%include ../partials/footer%>
    </div>
    <!-- Optional JavaScript -->
    <%include ../partials/javascript%>
</body>
 
</html>