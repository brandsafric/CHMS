<!doctype html>
<html lang="en">
 
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
        <%include ../partials/bootstrap%>
    <title>Administrative Account Setting</title>
</head>

<body>
    
    <div class="dashboard-main-wrapper">
        <%include ../partials/navbar%>
        <%include ../partials/sidebar%>
       
            
                <div class="container  dashboard-content ">                    
                        <div class="row justify-content-center">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-4 mt-2">
                                        <div style="padding-left:12em">
                                            <h2 class="pageheader-title">Church Management System Dashboard </h2>
                                            <div class="page-breadcrumb">
                                                <nav aria-label="breadcrumb">
                                                    <ol class="breadcrumb">
                                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                                        <li class="breadcrumb-item active" aria-current="page">Account</li>
                                                    </ol>
                                                </nav>
                                            </div>
                                        </div>
                                    </div>
                                <div class="col-xl-8 offset-xl-2 col-lg-8 offset-lg-2 col-md-12 col-sm-12 col-12  ">
                                        <div class="card">
                                                <h5 class="card-header">Account Setting <img src="<%=admin.image%>" class="img-fluid rounded-circle float-right" height="60" width="60"></h5>
                                                <div class="card-body">
                                                        <form method="POST"  action="/admin/account/<%=admin.id%>" enctype="multipart/form-data">
                                                            <div class="form-group">
                                                                <input class="form-control form-control-lg" required=true name="user" type="text" value="<%=admin.username%>" autocomplete="on">
                                                            </div>
                                                            <div class="form-group">
                                                                <input class="form-control form-control-lg" required=true name="email" type="email" value="<%=admin.email%>">
                                                            </div>
                                                            <div class="form-group">
                                                                    <input class="form-control form-control-lg" required=true name="password" type="password" readonly value="<%=admin.password%>">
                                                                </div>
                                                            <div class="form-group">
                                                                    <input class="form-control form-control-lg" name="image" type="file" accept="image/png, image/jpeg, image/jpg">
                                                                    <input type="hidden" name="hidden" value="<%=admin.image%>">
                                                            </div>
                                                            <button type="submit" class="btn btn-primary btn-lg btn-block">Update</button>
                                                        </form>
                                                </div>
                                          </div>
                                </div>
                            </div>
                        </div>
                    </div>
                
            </div>
        
       
    <!-- Optional JavaScript -->
    <%include ../partials/javascript%>
</body>
 
</html>